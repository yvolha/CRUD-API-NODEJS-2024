{
  "compilerOptions": {
    "target": "es2016",                                
    "lib": ["es6"],                                     
    "module": "ESNext",                                 
    "rootDir": "src",   
    "moduleResolution": "Node",                                
    "allowJs": true,                                    
    "checkJs": true,                                                                   
    "outDir": "dist",                                  
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "noImplicitAny": true,                              
    "skipLibCheck": true,
    "baseUrl": "./",
  }
}
