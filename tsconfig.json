{
  "compilerOptions": {
    "target": "es2016",                                
    "lib": ["es6"],                                     
    "module": "NodeNext",                                 
    "rootDir": ".",   
    "moduleResolution": "NodeNext",                                
    "allowJs": true,                                    
    "checkJs": true,                                                                   
    "outDir": "dist",                           
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "noImplicitAny": true,                              
    "skipLibCheck": true,
    "types": ["@types/node"],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
